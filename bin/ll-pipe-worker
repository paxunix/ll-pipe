#!/usr/bin/env zsh

# Intended for use by ll-pipe thus there is no error checking of any kind.

# Save exit status of the command.
function onExit
{
    print -r -- ${isError} > ${opts[--input-file]}.done
    return ${isError}
}


# Main

enableDebug && setopt xtrace

. ${0:h}/../etc/ll-pipe-fns || return 1

local -A opts
zparseopts -D -A opts -- \
    "-input-file:" \
    "-max-attempts:" \
    "-retry-delay:" \
    "-retry-failure-fatal" \

# XXX:  messages should only be in verbose mode?

# Receives metadata about the processing.
local metaFile=${opts[--input-file]}.meta

local numAttempts=0
local isError=1     # Assume failure.

trap 'isError=${?}; numAttempts=${opts[--max-attempts]}; return ${isError}' INT HUP TERM USR1 USR2 QUIT ABRT
trap 'onExit' EXIT

# Try the command until it succeeds or runs out of retries.
while (( numAttempts < ${opts[--max-attempts]} ))
do
    numAttempts=$((numAttempts + 1))

    message -u2 "Executing command (chunk ${opts[--input-file]:t}, attempt #${numAttempts}/${opts[--max-attempts]})..."

    # Time the command to get stats about it.  stdout overwrites stdout from
    # any prior attempt.  stderr is accumulated across attempts.
    timeCommand \
        --kv "action\\tcommand" \
        --kv "numAttempts\\t${numAttempts}" \
        --kv "inputFile\\t${opts[--input-file]}" \
        --output ${metaFile} \
        ${@} \
        < ${opts[--input-file]} \
        > ${opts[--input-file]}.out \
        2>> ${opts[--input-file]}.err

    isError=${?}

    if (( ! isError ))
    then
        message -u2 "Command succeeded (chunk ${opts[--input-file]:t}, attempt #${numAttempts}/${opts[--max-attempts]})..."

        # On success, delete the input file.
        ${=TOOL_RM} -f ${opts[--input-file]}
        break
    fi

    message -u2 "Command failed (chunk ${opts[--input-file]:t}, attempt #${numAttempts}/${opts[--max-attempts]})..."

    (( ${(e)opts[--retry-delay]} != 0 )) &&
        ${=TOOL_SLEEP} ${(e)opts[--retry-delay]}
done

# If the command failed and failure is fatal, immediately return 255 so that
# the wrapper xargs kills its kids and exits.
if (( isError && ${+opts[--retry-failure-fatal]} ))
then
    message -u2 "Command failed ${opts[--max-attempts]} attempts (chunk ${opts[--input-file]:t}).  Aborting all workers..."
    isError=255
fi

return ${isError}

# vim: ft=zsh
